<div class='row'>
<% @animal.each do | animal | %>
          <% if animal.animal %>

        <div class='thumbnail-padding'>

          <div class='col-xs-4 col-sm-3 col-md-3'>
          <div class='thumbnail'>

          <img src="<%= animal.photo %>" class='thumbnailPic' style='width:340px; height:260px;'>

          <div class='caption'>
          <h3> <%= animal.animal %></h3>
          <p><strong>Threat: <%= animal.threat %></strong></p>
          <!-- <p><strong>I am thought to be extinct: </strong><%= animal.extinct %></p> -->
          <p><a href='/animals/<%= animal.id %>' class='btn btn-primary' role='button'>Learn More About Me</a></p>
          </div>
        </div>
      </div>
     </div>
    <% end %>
